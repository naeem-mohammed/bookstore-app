{
  "env": {
    "browser": true,
    "jest": true
  },
  "extends": [
    "airbnb",
    "plugin:compat/recommended"
  ],
  "parser": "babel-eslint",
  "rules": {
    "class-methods-use-this": 0,
    "react/prop-types": 0,
    "import/no-named-as-default": 0,
    "arrow-parens": [
      "error",
      "as-needed"
    ],
    "react/jsx-closing-bracket-location": [
      1,
      "after-props"
    ],
    "react/jsx-filename-extension": [
      "error",
      {
        "extensions": [
          ".js",
          ".jsx"
        ]
      }
    ],
    "react/jsx-props-no-spreading": 0,
    "react/static-property-placement": 0,
    "linebreak-style": 0
  },
  "settings": {
    "polyfills": [
      "Promise",
      "fetch",
      "Object.assign",
      "Symbol",
      "Array.from"
    ]
  }
}